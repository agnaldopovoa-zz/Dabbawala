@model Dabbawala.Models.SolicitacaoTransporteResponse

@{
    ViewData["Title"] = "Remover";
}

<h2>Remover</h2>

<h3>Confirma a remoção desta solicitação de carga?</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="ColetaCarga" asp-action="ExecutarRemocao" method="post">
            <div>
                <input type="hidden" asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.CNPJCliente)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CNPJCliente)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CNPJDestinatario)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CNPJDestinatario)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CNPJTransportador)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CNPJTransportador)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Observacoes)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Observacoes)
                    </dd>
                </dl>
            </div>
            <input type="submit" value="Remover" class="btn btn-default" /> |
            <a asp-action="Listar">Voltar a lista</a>
        </form>
    </div>
</div>

